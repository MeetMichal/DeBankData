@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
@*         <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
 *@        <MudSpacer />
        <MudIconButton Icon="@DeBankSvg" Size="Size.Large" Color="Color.Inherit" Link="https://debank.com/" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" ClipMode="DrawerClipMode.Always" Elevation="1" Color="Color.Default">
        <MudNavMenu>
            <MudNavGroup Icon="@MichalProfile" Title="Michal" Expanded="true">
                <MudNavLink Href="michal/debank-users">DeBank users</MudNavLink>
                <MudNavLink Href="michal/reward-pools">Reward Pools</MudNavLink>
                <MudNavLink Href="michal/lucky-draws">Lucky Draws</MudNavLink>
                <MudNavLink Href="michal/stream-activity">Stream Activity</MudNavLink>
                <MudNavLink Href="michal/top-deposits">TOP deposits</MudNavLink>
@*                 <MudNavLink Href="michal/other-data">Other data</MudNavLink>
 *@            </MudNavGroup>
            <MudNavGroup Icon="@NettProfile" Title="nett" Expanded="true">
                <MudNavLink Href="nett/top-100">TOP 100</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>
    <MudBreakpointProvider>
        <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
            <MudMainContent Class="mt-16 px-16">
                @Body
            </MudMainContent>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
            <MudMainContent>
                Sorry, this app is not optimized for mobile devices. Please use a desktop browser.
            </MudMainContent>
        </MudHidden>
    </MudBreakpointProvider>
</MudLayout>